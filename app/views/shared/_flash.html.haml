- if flash[:notice]
  .alert.alert-info.alert-dismissible.fade.show.mb-2
    - msgs = (flash[:notice].is_a? String) ? [flash[:notice]] : flash[:notice]
    %ul.mb-0
      - msgs.each do |msg|
        %li= msg
    %button.btn-close{type: 'button', 'data-bs-dismiss': 'alert'}
- if flash[:alert]
  .alert.alert-danger.alert-dismissible.fade.show.mb-2
    - msgs = (flash[:alert].is_a? String) ? [flash[:alert]] : flash[:alert]
    %ul.mb-0
      - msgs.each do |msg|
        %li= msg
    %button.btn-close{type: 'button', 'data-bs-dismiss': 'alert'}
    
