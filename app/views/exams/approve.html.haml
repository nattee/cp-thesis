.card.mb-2
  .card-header.bg-body-tertiary
    %h5 อนุมัติการสอบวิทยานิพนธ์
  .card-footer
    .row
      .col-auto
        = button_to 'อนุมัติให้สอบได้', approve_exam_path(@exam.proposal), class: 'btn btn-falcon-success', params: {approve: true}
      .col-auto
        = button_to 'ไม่อนุมัติให้สอบ', approve_exam_path(@exam.proposal), class: 'btn btn-falcon-danger', params: {approve: false}

= render partial: 'proposals/proposal_card', locals: {proposal: @exam.proposal}


.card.mb-2
  .card-header
    %h5 การนัดสอบ
  .card-body.bg-body-tertiary
    .row
      .col-12
        .row
          .col-md-3.fw-medium
            วัน เวลา
          .col
            = l(@exam.exam_date,format: :short)
        .row
          .col-3.fw-medium
            สถานที่
          .col
            = @exam.place
        .row
          .col-3.fw-medium
            ประธานการสอบ
          .col
            = @exam.chair
        .row
          .col-3.fw-medium
            อาจารย์ที่ปรึกษา
          .col
            = @exam.proposal.advisor.name
        - unless @exam.com3.blank?
          .row
            .col-3.fw-medium
              กรรมการ
            .col
              = @exam.com1
        - unless @exam.com3.blank?
          .row
            .col-3.fw-medium
              กรรมการ
            .col
              = @exam.com2
        - unless @exam.com3.blank?
          .row
            .col-3.fw-medium
              กรรมการ
            .col
              = @exam.com3
        - unless @exam.ex_com.blank?
          .row
            .col-3.fw-medium
              กรรมการภายนอก
            .col
              = @exam.ex_com
